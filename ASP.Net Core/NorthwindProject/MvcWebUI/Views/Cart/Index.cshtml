@model CartListViewModel
@{
    Layout = "_Layout"; ;
    ViewBag.Title = "title";
}
<h2>Sepetiniz</h2>
@if (Model.Cart.CartLines.Count <= 0)
{
    <h3>Sepette Ürün Yoktur.</h3>
}
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ürün</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Stok Adeti</th>
                <th>Sepet Adeti</th>
            </tr>
        </thead>
        @foreach (var cartLine in Model.Cart.CartLines)
        {

            <tbody>
                <tr>
                    <td>@cartLine.Product.CategoryId</td>
                    <td>@cartLine.Product.ProductName</td>
                    <td>@cartLine.Product.QuantityPerUnit</td>
                    <td>@cartLine.Product.UnitPrice</td>
                    <td>@cartLine.Product.UnitsInStock</td>
                    <td>@cartLine.Quantity</td>
                    <td><a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@cartLine.Product.ProductId">Sepetten Kaldır</a></td>
                </tr>
            </tbody>

        }
    </table>
}